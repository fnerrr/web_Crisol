style.
    @keyframes jump {
        0%, 100% {
            transform: translateY(0) scale(1);
        }
        50% {
            transform: translateY(-10px) scale(1.1);
        }
    }
    .jumping {
        animation: jump 0.5s ease;
    }

script.
    document.addEventListener('DOMContentLoaded', function() {
        const socialIcons = document.querySelectorAll('.social-icon');
        
        function triggerJump() {
            // Selecciona un ícono aleatorio
            const randomIndex = Math.floor(Math.random() * socialIcons.length);
            const icon = socialIcons[randomIndex];
            
            // Añade la clase de animación
            icon.classList.add('jumping');
            
            // Remueve la clase después de que termine la animación
            setTimeout(() => {
                icon.classList.remove('jumping');
            }, 500);
        }
        
        // Activa la animación cada 5 segundos
        setInterval(triggerJump, 5000);
        
        // También activa una animación al cargar la página
        setTimeout(triggerJump, 1000);
    });