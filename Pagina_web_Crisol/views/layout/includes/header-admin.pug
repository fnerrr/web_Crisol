header(class="flex flex-col sm:flex-row shadow-xl justify-between items-center p-4 bg-principal text-textoPrimario relative z-10")
    //- Contenedor para el menú y el icono (en la misma línea)
    div(class="flex flex-row items-center space-x-4 w-full sm:w-auto justify-start")
        //- Menú de Navegación Móvil
        div(x-data="{ mobileNavOpen: false }" class="flex items-center justify-start sm:hidden")
            //- Botón de hamburguesa
            button(x-on:click="mobileNavOpen = !mobileNavOpen",class="navbar-burger text-white hover:text-gray-200 relative z-50")
                svg(width="32" height="32" viewbox="0 0 32 32" fill="none" xmlns="http://www.w3.org/2000/svg")
                    path(d="M5.19995 23.2H26.7999" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round")
                    path(d="M5.19995 16H26.7999" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round")
                    path(d="M5.19995 8.79999H26.7999" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round")

            //- Menú desplegable - ESTA ES LA PARTE CRÍTICA
            template(x-teleport="body")  <!-- Esto coloca el menú al final del body -->
                div(
                    x-show="mobileNavOpen",
                    x-transition:enter="transition ease-out duration-300",
                    x-transition:enter-start="opacity-0",
                    x-transition:enter-end="opacity-100",
                    x-transition:leave="transition ease-in duration-200",
                    x-transition:leave-start="opacity-100",
                    x-transition:leave-end="opacity-0",
                    class="fixed inset-0 z-[9999]"
                )
                    <!-- Fondo oscuro -->
                    div(
                        x-on:click="mobileNavOpen = false",
                        class="absolute inset-0 bg-black/50"
                    )
                    
                    <!-- Contenido del menú -->
                    nav(
                        class="absolute top-0 left-0 h-full w-4/5 max-w-sm bg-principal shadow-xl",
                        x-show="mobileNavOpen",
                        x-transition:enter="transition ease-out duration-300",
                        x-transition:enter-start="-translate-x-full",
                        x-transition:enter-end="translate-x-0",
                        x-transition:leave="transition ease-in duration-200",
                        x-transition:leave-start="translate-x-0",
                        x-transition:leave-end="-translate-x-full"
                    )
                        <!-- Botón de cierre -->
                        div(class="flex items-center justify-between p-4 border-b border-white/10")
                            h2(class="text-2xl text-textoPrimario font-bold") Menú
                            button(
                                x-on:click="mobileNavOpen = false",
                                class="text-white hover:text-gray-200"
                            )
                                svg(width="32" height="32" viewbox="0 0 32 32" fill="none" xmlns="http://www.w3.org/2000/svg")
                                    path(d="M23.2 8.79999L8.80005 23.2M8.80005 8.79999L23.2 23.2" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round")

                        <!-- Enlaces del menú -->
                        ul(class="flex flex-col space-y-4 p-4")
                            li
                                div(x-data="{ submenuOpen: false }")
                                    button(x-on:click="submenuOpen = !submenuOpen",class="inline-block text-white hover:text-gray-200 font-medium flex items-center") Inicio
                                        span(class="ml-2 transition-transform duration-200" :class="{ 'rotate-180': submenuOpen }") ▼
                                    ul(x-show="submenuOpen",class="pl-4 mt-2 space-y-2")
                                        li
                                            a(href="/admin/actualizar-icono",class="inline-block text-white hover:text-gray-200") Actualizar Icono
                                        li
                                            a(href="/admin/actualizar-color",class="inline-block text-white hover:text-gray-200") Actualizar color
                            li
                                div(x-data="{ submenuOpen: false }")
                                    button(x-on:click="submenuOpen = !submenuOpen",class="inline-block text-white hover:text-gray-200 font-medium flex items-center") Slider
                                        span(class="ml-2 transition-transform duration-200" :class="{ 'rotate-180': submenuOpen }") ▼
                                    ul(x-show="submenuOpen",class="pl-4 mt-2 space-y-2")
                                        li
                                            a(href="/quienes-somos/historia",class="inline-block text-white hover:text-gray-200") Actualizar slider
                                        li
                                            a(href="/quienes-somos/mision-vision",class="inline-block text-white hover:text-gray-200") Ver Slider 
                            li
                                div(x-data="{ submenuOpen: false }")
                                    button(x-on:click="submenuOpen = !submenuOpen",class="inline-block text-white hover:text-gray-200 font-medium flex items-center") Articulos
                                        span(class="ml-2 transition-transform duration-200" :class="{ 'rotate-180': submenuOpen }") ▼
                                    ul(x-show="submenuOpen",class="pl-4 mt-2 space-y-2")
                                        li
                                            a(href="/quienes-somos/historia",class="inline-block text-white hover:text-gray-200") Agregar articulos
                                        li
                                            a(href="/quienes-somos/mision-vision",class="inline-block text-white hover:text-gray-200") Ver articulos
                                        li
                                            a(href="/quienes-somos/mision-vision",class="inline-block text-white hover:text-gray-200") Editar articulos 
                            li
                                div(x-data="{ submenuOpen: false }")
                                    button(x-on:click="submenuOpen = !submenuOpen",class="inline-block text-white hover:text-gray-200 font-medium flex items-center") Revistas
                                        span(class="ml-2 transition-transform duration-200" :class="{ 'rotate-180': submenuOpen }") ▼
                                    ul(x-show="submenuOpen",class="pl-4 mt-2 space-y-2")
                                        li
                                            a(href="/admin/agregar-pdf",class="inline-block text-white hover:text-gray-200") Agregar revistas
                                        li
                                            a(href="/admin/lista-revistas",class="inline-block text-white hover:text-gray-200") Ver reviasr 
                                        li
                                            a(href="/quienes-somos/mision-vision",class="inline-block text-white hover:text-gray-200") Editar revistas
                            li
                                div(x-data="{ submenuOpen: false }")
                                    button(x-on:click="submenuOpen = !submenuOpen",class="inline-block text-white hover:text-gray-200 font-medium flex items-center")| Noticias
                                        span(class="ml-2 transition-transform duration-200" :class="{ 'rotate-180': submenuOpen }") ▼
                                    ul(x-show="submenuOpen",class="pl-4 mt-2 space-y-2")
                                        li
                                            a(href="/admin/registro-noticias",class="inline-block text-white hover:text-gray-200")  Agregar Noticia
                                        li
                                            a(href="/admin/vernoticias",class="inline-block text-white hover:text-gray-200") Ver noticias agregadas
                                        li
                                            a(href="/admin/editar-noticias",class="inline-block text-white hover:text-gray-200") Editar noticias    
                            li
                                div(x-data="{ submenuOpen: false }")
                                    button(x-on:click="submenuOpen = !submenuOpen",class="inline-block text-white hover:text-gray-200 font-medium flex items-center")| Contacto
                                        span(class="ml-2 transition-transform duration-200" :class="{ 'rotate-180': submenuOpen }") ▼
                                    ul(x-show="submenuOpen",class="pl-4 mt-2 space-y-2")
                                        li
                                            a(href="/admin/contactos",class="inline-block text-white hover:text-gray-200")  Contacto
                                        li
                                            a(href="/admin/colaboraciones",class="inline-block text-white hover:text-gray-200") Colaboraciones
                            li
                                form(action="/admin/cerrar-sesion",method="POST",class="ml-auto")
                                    input(type="hidden",name="_csrf",value=csrfToken)
                                    button(type="submit",class="bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded") Cerrar Sesión

        //- Icono
        img(
            src="/img/crisol.jpg",
            alt="Icono",
            class="w-14 h-14 sm:w-16 sm:h-16 rounded-full"
        )

    //- Texto y botón de Cerrar Sesión
    div(class="flex flex-col sm:flex-row items-center justify-end w-full sm:w-auto mt-4 sm:mt-0 space-y-4 sm:space-y-0 sm:space-x-4")
        h1(class="text-2xl sm:text-xl font-title italic font-bold text-center sm:text-left") Saber, Educación y Política
