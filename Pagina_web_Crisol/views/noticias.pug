extends ./layout/inicio_html

block contenido
    div(class="m-4 sm:m-10 mx-auto max-w-xs sm:max-w-full")
        div(class="bg-white rounded-lg shadow-lg p-8 text-center")
            h2(class="text-2xl font-title text-black mb-4") Noticias

            //- Verificar si hay noticias
            if noticias.length === 0
                //- Mensaje cuando no hay noticias
                p(class="text-gray-600 text-lg") No hay noticias disponibles en este momento.
            else
                //- Contenedor de las cards (solo se muestra si hay noticias)
                div(class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6")
                    each noticia in noticias
                        a(
                            href=noticia.url,
                            target="_blank",
                            class="block bg-white rounded-lg shadow-md overflow-hidden transform transition-all duration-300 hover:scale-105 hover:shadow-lg hover:bg-gray-50"
                        )
                            img(
                                src=noticia.img,
                                alt=noticia.Titulo,
                                class="w-full h-48 object-cover"
                            )
                            div(class="p-4")
                                h4(
                                    class="text-lg font-bold text-gray-800 hover:text-crisol transition-colors duration-300"
                                ) #{noticia.Titulo}



